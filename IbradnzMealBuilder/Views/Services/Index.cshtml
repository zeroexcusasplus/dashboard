    <div class="font-family-poppins-bold mx-2 font-size-15 justify-content-center text-center text-white mt-5">7 dias gratis, luego  anual $@ViewBag.Yearly o @ViewBag.Monthly mensual</div>
    <div class="text-center mt-3 mx-auto" style="width:80%">
        <a asp-controller="Subscribe" asp-action="Index" class="btn custom-secondary-btn font-family-poppins-medium w-100 font-size-25">
            EMPIEZA YA <i class="fas fa-chevron-right"></i>
        </a>
    </div>
    <div class="text-center mb-5 mt-3">
        <a asp-controller="Meals" asp-action="MealBuilder" class="text-white font-family-poppins-medium font-size-15" style="border-bottom:2px solid white;padding:3px">Continua Gratis</a>
    </div>
</div>

<style>

    tr {
        height: 60px;
    }

    .zeroexcusas-sm-logo-container{
        width:400px;
    }

    .gratis-table-width {
        min-width: 110px;
        max-width: 300px;
    }

    .premium-table-width {
        min-width: 110px;
        max-width: 300px;
    }

    table {
        border-collapse: separate;
        border-radius: 10px;
        -moz-border-radius: 10px;
        padding: 0;
    }

    td {
        border-width: 1px 0;
        padding: 0;
    }

    @@media screen and (max-width: 379px) and (min-width: 0px) {

        .gratis-table-width {
            width: 100px;
        }

        .premium-table-width {
            width: 90px;
        }
    }

    @@media screen and (max-width: 420px) and (min-width: 380px) {

        .zeroexcusas-sm-logo-container {
            width: 90%;
        }

        .gratis-table-width {
            width: 100px;
        }

        .premium-table-width {
            width: 100px;
        }
    }


    @@media screen and (max-width: 820px) and (min-width: 421px) {

        .gratis-table-width {
            width: 100px;
        }

        .premium-table-width {
            width: 105px;
        }
    }

    @@media screen and (max-width: 420px) and (min-width: 0) {

        .zeroexcusas-sm-logo-container {
            width: 90%;
        }
    }

</style>

