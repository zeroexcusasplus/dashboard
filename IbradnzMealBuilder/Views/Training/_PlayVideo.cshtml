
@model IbradnzMealBuilder.Models.VideoPlayer
@{ 
    string youtubeEmbededUrl = "https://youtube.com/embed/" + Model.Url;
}
<iframe id="YouTubevideo" src="@youtubeEmbededUrl" width="100%" height="315"  frameborder="0" allowfullscreen></iframe>

<script type="text/javascript">

    $("#videoPlayer").on('hidden.bs.modal', function () {
        $("#YouTubevideo").remove();
    });

</script>

<style>

    .ytp-overflow-icon {
        display: none !important;
    }

    .display-none {
        display: none !important;
    }
</style>

