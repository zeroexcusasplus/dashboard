@model IbradnzMealBuilder.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Cambia la contraseña";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Header"] = "CAMBIA LA CONTRASEÑA";
}
<div class="card box-shadow centralised-card">
    <div class="card-body">
        <form id="change-password-form" method="post">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="mx-auto box-shadow mb-1" style="width:100%;border-radius:10px;padding:10px 5px 5px 5px">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            }
            <div class="form-group">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="text-center mb-1">
                <button id="submit-button" type="submit" class="btn custom-primary-btn">ACTUALIZA CONTRASEÑA <i class="fas fa-chevron-right"></i></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}