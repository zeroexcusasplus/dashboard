@model IbradnzMealBuilder.Models.AddProgramModel
@using IbradnzMealBuilder.Utility
@{
    ViewData["Title"] = "agregar programa";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
    ViewData["Header"] = "agregar programa".ToUpper();
}


<div class="card dark-grey-background mx-auto mb-5 font-family-poppins-medium" style="min-width:200px;max-width:500px">
    <div class="card-body">
        <form method="post">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="mx-auto box-shadow mb-2" style="width:100%;border-radius:10px;padding:10px 5px 5px 5px">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            }
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order"></label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingType"></label>
                <select asp-for="TrainingType" class="form-control" asp-items="Html.GetEnumSelectList<TrainingType>()"></select>
                <span asp-validation-for="TrainingType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionYoutubeLink"></label>
                <input asp-for="DescriptionYoutubeLink" class="form-control" />
                <span asp-validation-for="DescriptionYoutubeLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PreviewYoutubeLink"></label>
                <input asp-for="PreviewYoutubeLink" class="form-control" />
                <span asp-validation-for="PreviewYoutubeLink" class="text-danger"></span>
            </div>
            <div style="text-align:center">
                <input id="submit-button" type="submit" class="btn custom-secondary-btn mx-auto" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
