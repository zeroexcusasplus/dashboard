@model IbradnzMealBuilder.Models.ViewMealTypesViewModel
@{
    ViewData["Title"] = "Meal types";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
    ViewData["Header"] = "COMIDA";
}
<div class="font-family-poppins-medium">
    <div>
        <div style="text-align:right">
            <a class="btn custom-primary-btn mb-3" asp-action="NewMealType">Add new mealtype</a>
        </div>
    </div>

    <div class="card box-shadow">
        <div class="card-body">
            <h5>Carbohydrate</h5>
            <table class="table table-responsive-sm">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Unit value</th>
                        <th>Carbs</th>
                        <th>Fat</th>
                        <th>Protein</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mealType in Model.CarbsMealTypes)
                    {
                        <tr>
                            <td>@mealType.Name</td>
                            <td>@mealType.UnitValue</td>
                            <td>@mealType.CarbsPerUnitGram</td>
                            <td>@mealType.FatPerUnitGram</td>
                            <td>@mealType.ProteinPerUnitGram</td>
                            <td>
                                <a class="btn btn-sm custom-primary-btn float-right" asp-action="EditMealType" asp-route-id="@mealType.Id">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


