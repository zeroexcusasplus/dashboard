@model IbradnzMealBuilder.Models.AddTechniqueVideoModel
@using IbradnzMealBuilder.Utility
@{
    ViewData["Title"] = "Agregar video de técnica";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
    ViewData["Header"] = "Técnica y tutoriales".ToUpper();
}


<div class="card dark-grey-background mx-auto mb-5 font-family-poppins-medium" style="min-width:200px;max-width:500px">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data" id="form">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="mx-auto box-shadow mb-2" style="width:100%;border-radius:10px;padding:10px 5px 5px 5px">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            }
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MuscleGroup"></label>
                <select asp-for="MuscleGroup" class="form-control" asp-items="Model.MuscleGroups"></select>
                <span asp-validation-for="MuscleGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order"></label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YouTubeUrl"></label>
                <input asp-for="YouTubeUrl" class="form-control" />
                <span asp-validation-for="YouTubeUrl" class="text-danger"></span>
            </div>
            <div class="font-family-poppins-medium">OR</div>
            <div>
                <div class="form-group">
                    <label>Prev Video</label>
                    <select asp-for="PrevVideoUrl" asp-items="Model.PrevVideos" class="form-control"></select>
                </div>
            </div>
            <div style="text-align:center">
                <input id="submit-button" type="submit" class="btn custom-secondary-btn mx-auto" value="Añadir video" />
            </div>
        </form>
    </div>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    $(function () {
        $('#form').submit(function () {
            var $this = $(this);
            if ($this.valid()) {
                // show loading, spinner, whatever.
                ShowUploading();
            }
        });
    });
</script>