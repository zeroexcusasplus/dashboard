@model IbradnzMealBuilder.Models.EditMealTypeViewModel
@using IbradnzMealBuilder.Utility
@{
    ViewData["Title"] = "EditMealType";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
    ViewData["Header"] = "COMIDA";
}

<div class="card box-shadow centralised-card">
    <div class="card-body">
        <form method="post">
            <h4>New meal type</h4>
            <hr />
            <input asp-for="MealTypeId" hidden />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nutrient"></label>
                <select asp-for="Nutrient" asp-items="Html.GetEnumSelectList<NutrientClass>()" class="form-control"></select>
                <span asp-validation-for="Nutrient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitValue"></label>
                <input asp-for="UnitValue" class="form-control" />
                <span asp-validation-for="UnitValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarbsPerUnitGram"></label>
                <input asp-for="CarbsPerUnitGram" class="form-control" />
                <span asp-validation-for="CarbsPerUnitGram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProteinPerUnitGram"></label>
                <input asp-for="ProteinPerUnitGram" class="form-control" />
                <span asp-validation-for="ProteinPerUnitGram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FatPerUnitGram"></label>
                <input asp-for="FatPerUnitGram" class="form-control" />
                <span asp-validation-for="FatPerUnitGram" class="text-danger"></span>
            </div>
            <button id="submit-button" type="submit" class="btn custom-primary-btn">Edit mealtype</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
