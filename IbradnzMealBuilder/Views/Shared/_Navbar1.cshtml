@using Microsoft.AspNetCore.Identity
@using IbradnzMealBuilder.Core
@using IbradnzMealBuilder.Utility
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent font-family-din-condensed">
    <div class="container-fluid">
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav flex-row mx-auto">
                
                <li class="nav-item" style="padding-right:40px">
                    @*todo: replace with logo*@
                    <a class=" primary-color zeroexcusas-navbar-lg" asp-controller="Home" asp-action="Index">
                        <img src="~/Images/ZeroExcusasLogo-Blue.png" />
                    </a>
                </li>
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link custom-nav-link font-family-poppins-medium pt-06rem" style="padding-left:70px !important;padding-right:70px !important"
                           asp-area="" asp-controller="" asp-action="">Como Funciona</a>
                    </li>

                    <li class="nav-item">
                        @*Go premium*@
                        <a class="nav-link custom-nav-link pt-06rem font-family-poppins-medium" style="padding-left:70px !important;padding-right:70px !important"
                           asp-area="" asp-controller="Subscribe" asp-action="Index">Premium</a>
                    </li>

                    if (User.IsInRole(AppConstant.AdminRole))
                    {
                        <li class="nav-item">
                            <a class="nav-link custom-nav-link pt-06rem font-family-poppins-medium"
                               asp-area="" asp-controller="Admin" asp-action="Index">Dashboard</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link custom-nav-link pt-06rem font-family-poppins-medium"
                               asp-area="" asp-controller="Account" asp-action="Profile">Mi perfil</a>
                        </li>
                    }
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link custom-nav-link font-family-poppins-medium pt-06rem" asp-area="" asp-controller="" asp-action="">Como Funciona</a>
                    </li>

                    <li class="nav-item">
                        @*Go premium*@
                        <a class="nav-link custom-nav-link pt-06rem font-family-poppins-medium" asp-area="" asp-controller="Index" asp-action="Subscribe">Premium</a>
                    </li>
                    <li class="nav-item float-right login-register-nav">
                        <a class="nav-link custom-primary-btn font-family-poppins-medium mx-1 login-register-btn" style="padding:10px 20px"
                            asp-controller="Account" asp-action="setupProfile">
                            Registrarse
                        </a>
                    </li>

                    <li class="nav-item login-register-nav">
                        <a class="nav-link custom-primary-btn font-family-poppins-medium mx-1 login-register-btn" style="padding:10px 20px" asp-area="Identity" asp-page="/Account/Login">
                            Iniciar sesión
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>