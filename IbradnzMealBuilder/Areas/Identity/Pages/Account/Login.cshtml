@page
@model LoginModel

@{
    ViewData["ShowFaq"] = "No";
    ViewData["Title"] = "Registrarse";
    Layout = "~/Views/Shared/_IdentityAccountLayout.cshtml";
}
<div class="container">
    <div class="zeroexcusas-header"><a asp-controller="Home" asp-action="Index" class="text-white">ZEROEXCUSAS</a></div>
    <div class="card small-centralised-card box-shadow login-card-background">
        <div class="card-body">
            <form id="account" method="post">
                <h6 class="font-weight-500 font-size-20 font-family-poppins-semibold">Ingresa a tu cuenta</h6>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-0">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <p class="font-weight-500 mb-0 font-family-poppins-medium">
                    <a id="forgot-password" asp-page="./ForgotPassword" style="text-decoration:underline" class="font-weight-500 font-size-15">Olvidaste la contrasena?</a>
                </p>
                <div class="text-center mb-2 my-2 font-family-poppins-medium">
                    <button type="submit" class="btn custom-primary-btn" id="submit-button">INICIA SESION <i class="fas fa-chevron-right"></i></button>
                </div>
                <p class="font-weight-500 font-size-15 mb-0 font-family-poppins-medium">
                    No tienes una cuenta  <a asp-page="./Register" style="text-decoration:underline">Regístrate</a>
                </p>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
