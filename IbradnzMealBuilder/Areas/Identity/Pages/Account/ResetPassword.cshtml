@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Restablecer la contraseña";
    Layout = "~/Views/Shared/_IdentityAccountLayout.cshtml";
}


<div class="container">
    <div class="zeroexcusas-header"><a asp-controller="Home" asp-action="Index">ZEROEXCUSAS</a></div>
    <div class="card small-centralised-card box-shadow login-card-background">
        <div class="card-body">
            <h6 class="font-weight-500 font-size-20 font-family-poppins-bold">Restablecer su contraseña</h6>
            <form method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="mx-auto box-shadow mb-1 font-family-poppins-medium" style="width:100%;border-radius:10px;padding:10px 5px 5px 5px">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                }
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="text-center mb-1 font-family-poppins-medium">
                    <button type="submit" id="submit-button" class="btn custom-primary-btn">REINICIAR <i class="fas fa-chevron-right"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
